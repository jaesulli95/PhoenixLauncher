<Window x:Class="PhoenixDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhoenixDownloader"
        mc:Ignorable="d"
        Title="Phoenix-Launcher" Height="900" Width="1600" ResizeMode="NoResize" WindowStyle="None" AllowsTransparency="True" Background="{x:Null}">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/Nier_bg_3.png"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#CC000000" MouseDown="Grid_MouseDown" Height="35">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Margin="10,0,0,0" 
                        Orientation="Horizontal" 
                        VerticalAlignment="Center">
                <Image x:Name="ImgIco" Source="/Resources/Icons/phoenix.png" Stretch="Fill"/>
                <TextBlock x:Name="TxtTitle" 
                    Text="Phoenix Games" 
                    Foreground="White" 
                    FontSize="24" 
                    Width="290" Margin="10,0,0,0"/>
            </StackPanel>
            <StackPanel x:Name="StackOptions"
                    Grid.Column="1"
                    Orientation="Horizontal" 
                    Visibility="Visible"
                    Margin="0,0,15,0"
                        
                    HorizontalAlignment="Right" Width="50">
                <Button x:Name="BtnMinimize" Width="25" 
                        Height="25" 
                        Content="-" 
                        Click="BtnMinimize_Click" Foreground="White" FontSize="16">
                    <Button.Background>
                        <ImageBrush ImageSource="/ButtonNormal.png"/>
                    </Button.Background>
                </Button>
                <Button Width="25"
                    HorizontalAlignment="Right" 
                    Height="25" x:Name="BtnClose" Click="BtnClose_Click" Content="X" Foreground="White" FontSize="16">
                    <Button.Background>
                        <ImageBrush ImageSource="/ButtonNormal.png"/>
                    </Button.Background>
                </Button>
            </StackPanel>

            <Image x:Name="ImgUnderline" Height="3" Width="1600" Source="/Underline.png" Grid.Row="1" Stretch="Fill" Grid.ColumnSpan="2" VerticalAlignment="Bottom"/>

        </Grid>

    </Grid>
</Window>
