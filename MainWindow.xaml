<Window x:Class="PhoenixDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhoenixDownloader"
        mc:Ignorable="d"
        Title="Phoenix-Launcher" Height="720" Width="1280" ResizeMode="NoResize" WindowStyle="None" AllowsTransparency="True" Background="{x:Null}">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Nier_bg_3.png"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#CC000000" MouseDown="Grid_MouseDown" Height="35">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="TxtTitle" 
                    Text="Phoenix-Launcher" 
                    Foreground="White" 
                    FontSize="24" 
                    VerticalAlignment="Center" 
                    Margin="10,0,0,0"/>
            <StackPanel x:Name="StackOptions"
                    Grid.Column="1"
                    Orientation="Horizontal" 
                    Visibility="Visible"
                    Margin="0,0,15,0"
                        
                    HorizontalAlignment="Right" Width="50">
                <Button x:Name="BtnMinimize" Width="20" 
                        Height="20" 
                        Content="-" 
                        Click="BtnMinimize_Click"
                        />
                <Button Width="20"
                    HorizontalAlignment="Right" 
                    Height="20" Margin="10,0,10,0" x:Name="BtnClose" Click="BtnClose_Click" Content="X"
                        />
            </StackPanel>

        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
        </Grid>
    </Grid>
</Window>
